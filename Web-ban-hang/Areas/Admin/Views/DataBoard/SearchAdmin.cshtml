@model List<Web_ban_hang.ViewModels.SearchResultViewModel>

@{
	ViewData["Title"] = "SearchAdmin";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
	int i = 1;
}

<h2>Số kết quả tìm kiếm : @Model.Count</h2>

@if (Model != null && Model.Count > 0)
{

	<table class="table table-hover">
		<thead>
			<tr>

				<th scope="col">#</th>
				<th scope="col">Hình</th>
				<th scope="col">Loại</th>
				<th scope="col">Tên</th>
				<th scope="col">Mô tả</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{

				<tr>
					<th scope="row">@i</th>
					<td><img src="@item.srcImage" width="50" /></td>
					<td>@item.Type</td>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td><a href="@item.Link" class="btn btn-info">View</a></td>

				</tr>
				i++;
			}
		</tbody>
	</table>
}
else
{
	<p class="text-muted">No results found.</p>
}

@model Web_ban_hang.ViewModels.Customer

@{
    ViewData["Title"] = "Profile";
}
<div class="imgandOut">

<a asp-action="LogOut" class="btn btn-primary">Đăng xuất</a>
    <div class="image-ctn">
        <img id="previewImg" class="imgAva" src="~/Hinh/KhachHang/@Model.Hinh" width="180" style="padding-top:100px" />
    </div>
</div>
                          

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Welcome @Context.User.Identity.Name</h1>
        <form asp-action="Profile" asp-controller="Customer" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MaKh" value="@Model.MaKh" class="form-control" readonly>
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" value="@Model.MatKhau" class="form-control" readonly>
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.HoTen"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" value="@Model.HoTen" class="form-control" />
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>

                    <div class="d-flex align-items-center my-3">

                        <div class="form-check my-3">
                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="true" id="GioiTinhNam">
                            <label class="form-check-label" for="GioiTinhNam">Nam</label>
                        </div>

                        <div class="form-check my-3">
                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="false" id="GioiTinhNu">
                            <label class="form-check-label" for="GioiTinhNu">Nữ</label>
                        </div>

                        <div class="form-check my-3">
                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="false" id="GioiTinhKhac">
                            <label class="form-check-label" for="GioiTinhKhac">Khác</label>
                        </div>
                    </div>


                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.NgaySinh"></label>
                        <input asp-for="@Model.NgaySinh"  class=" form-control" />
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DiaChi"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" value="@Model.DiaChi" class="form-control" />
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DienThoai"></label><sup>*</sup>
                        <input asp-for="@Model.DienThoai" value="@Model.DienThoai" class="form-control" />
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input asp-for="@Model.Email" value="@Model.Email" class="form-control" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3" for="Hinh">Hình<sup>*</sup></label>
                        <input type="file" name="Hinh" onchange="previewImage(event)" class="form-control" />
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>



<script>
    function previewImage(event) {
        const file = event.target.files[0]; // Lấy file từ input
        if (file) {
            const reader = new FileReader(); // Tạo FileReader để đọc file
            reader.onload = function (e) {
                document.getElementById('previewImg').src = e.target.result; // Gán src cho ảnh
            };
            reader.readAsDataURL(file); // Đọc file dưới dạng DataURL
        }
    }
</script>


<style>
    .imgandOut {
        display: flex; /* Bố cục theo hàng ngang */
        align-items: center; /* Canh giữa theo chiều dọc */
        justify-content: right; /* Khoảng cách giữa các phần tử */
        height: 200px; /* Chiều cao của khối */
        padding-right: 150px; /* Khoảng cách bên trong */
        
        position:relative;
    }

    .imgandOut a{
        position: absolute;
        top : 20px;
        left : 10px;
    }
</style>
@model Web_ban_hang.ViewModels.ForgotPass

@{
    ViewData["Title"] = "ForgotPass";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!-- Sign Up Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="index.html" class="">
                        <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>UPAGE</h3>
                    </a>
                    <h3> Quên mật khẩu</h3>
                </div>
                <form asp-action="ForgotPass" asp-controller="Customer" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="@Model.Email" placeholder="email đã đăng ký">
                        <label>Email</label>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="number" class="form-control" asp-for="@Model.Code" placeholder="OTP">
                        <label asp-for="@Model.Code">Mã OTP</label>
                        <span asp-validation-for="@Model.Code" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                       
                        <a asp-control="Customer" asp-action="sendConfirm" >nhận mã otp</a>
                    </div>
                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->


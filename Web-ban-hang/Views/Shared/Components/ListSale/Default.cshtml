@model IEnumerable<Web_ban_hang.ViewModels.ListSale>

@{
    var count = 0;
}

    
@foreach (var item in Model)
{
   if(count == 3)
    {
        break;
    }
    <div class="d-flex align-items-center justify-content-start">
    <div class="rounded" style="width: 100px; height: 100px;">
        <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid rounded" alt="Image">
    </div>
    <div>
        <h6 class="mb-2">@item.TenLoai</h6>
        <div class="d-flex mb-2">
            <i class="fa fa-star text-secondary"></i>
            <i class="fa fa-star text-secondary"></i>
            <i class="fa fa-star text-secondary"></i>
            <i class="fa fa-star text-secondary"></i>
            <i class="fa fa-star"></i>
        </div>
        <div class="d-flex mb-2">
            <h5 class="fw-bold me-2">2.99 $</h5>
            <h5 class="text-danger text-decoration-line-through">@item.DonGia $</h5>
        </div>
    </div>
    </div>
    count++;
}